
from kivy.app import App
from kivy.uix.boxlayout import BoxLayout

class FullScreenApp(App):
    def build(self):
        # ルートレイアウトを作成
        layout = BoxLayout()
        return layout

    def on_start(self):
        # アプリ起動時に全画面表示に設定
        from kivy.config import Config
        Config.set('graphics', 'fullscreen', 'auto')

if __name__ == '__main__':
    FullScreenApp().run()

