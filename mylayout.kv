#images:images.kv
<MyLayout>
    id: my_widget
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 20
        spacing: 20

        Image:
            id: my_image
            source: ""
            size_hint: (1, 5)

        GridLayout:
            cols:3
            
            Button:
                text: "かわよき!!"
                pos_hint: {"center_x": 0.5}
                size_hint: (1, 1)
                on_press: root.press1()
                
            Button:
                text: "よき!!"
                pos_hint: {"center_x": 0.5}
                size_hint: (1, 1)
                on_press: root.press2()
            
            Button:
                text: "saikou!!"
                pos_hint: {"center_x": 0.5}
                size_hint: (1, 1)
                on_press: root.press3()
                
            Button:
                text: "iyasi!!"
                on_release: root.manager.current = 'goto01.txt'
                pos_hint: {"center_x": 0.5}
                size_hint: (1, 1)
                on_press: root.press4()