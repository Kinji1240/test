#images:images.kv
<MyLayout>
    id: my_widget
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 20
        spacing: 20

        Image:
            id: my_image
            source: ""
            size_hint: (1, 5)
        
        Label:
            id: view_label
            text: '-'
    

        GridLayout:
            cols:3
            
            Button:
                text: "かわよき!!"
                font_name: "NikkyouSans-mLKax"
                pos_hint: {"center_x": 0.5}
                size_hint: (1, 1)
                on_press: root.press1()
                
            Button:
                text: "よき!!"
                font_name: "NikkyouSans-mLKax"
                pos_hint: {"center_x": 0.5}
                size_hint: (1, 1)
                on_press: root.press2()
            
            Button:
                text: "最高!!"
                font_name: "NikkyouSans-mLKax"
                pos_hint: {"center_x": 0.5}
                size_hint: (1, 1)
                on_press: root.press3()
                
            Button:
                text: "癒し"
                font_name: "NikkyouSans-mLKax"
                pos_hint: {"center_x": 0.5}
                size_hint: (1, 1)
                on_press: root.button_clicked()

            Button:
                text: "時間"
                font_name: "NikkyouSans-mLKax"
                pos_hint: {"center_x": 0.5}
                size_hint: (1, 1)
                on_press: root.button_clicked()